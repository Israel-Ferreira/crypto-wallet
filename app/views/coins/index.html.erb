<p id="notice"><%= notice %></p>

<h1><%= t('coins') %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('table_headers.common.description') %></th>
      <th><%= t('table_headers.common.acronym') %></th>
      <th><%= t('table_headers.coins.image') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coins.each do |coin| %>
      <tr>
        <td><%= coin.description %></td>
        <td><%= coin.acronym %></td>
        <td>
          <%= image_tag coin.url_image, width: 25, height: 25 %>
        </td>
        <td><%= link_to t('links.show'), coin %></td>
        <td><%= link_to t('links.edit'), edit_coin_path(coin) %></td>
        <td><%= link_to t('links.destroy'), coin, method: :delete, data: { confirm: t('are_you_sure') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nova Moeda', new_coin_path %>
